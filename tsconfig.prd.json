{
    "extends": "./tsconfig.json",
    "include": ["src"],
    "exclude": ["node_modules", "dist", "build"],
    "compilerOptions": {
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noEmitOnError": true,
        "removeComments": true,
        "esModuleInterop": true,

        "isolatedModules": true,
        "outDir": "dist",

        "types": []
    }
}
